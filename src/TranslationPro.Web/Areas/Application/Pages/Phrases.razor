@page "/application/{applicationId:guid}/phrases"
@inherits AuthenticatedPage
<PageTitle>Languages</PageTitle>

<h1>Phrases</h1>

@if (_phrases == null)
{
    <p><em>Loading...</em></p>
}
else
{
    if (_phrases.TotalItems == 0)
    {
        <p>There are no phrases</p>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Text</th>
                    <th>Translations</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var phrase in _phrases.Items)
                {
                    <tr>
                        <td>
                            <NavLink href="@($"/application/{ApplicationId}/phrases/{@phrase.Id}/translations")">@phrase.Text</NavLink>

                        </td>
                        <td>@phrase.Text</td>
                        <td>@phrase.TranslationCount</td>
                    </tr>
                }
            </tbody>
        </table>
    }

}
