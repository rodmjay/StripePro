@inherits AuthenticatedPage
@page "/application/{applicationId:guid}/users"
<h3>Users</h3>

@if (_users == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
        <tr>
            <th>Name</th>
            <th>Status</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var user in _users)
        {
            <tr>
                <td>
                   @user.Name
                </td>
                <td>
                    @user.Status
                </td>
            </tr>
        }
        </tbody>
    </table>
}