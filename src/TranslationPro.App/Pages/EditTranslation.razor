@page "/applications/{ApplicationId:guid}/phrases/{PhraseId:int}/languages/{LanguageId}"
@inherits PhraseDetailsBase
@layout ApplicationLayout

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><NavLink href="@{$"/applications"}">Applications</NavLink></li>
        <li class="breadcrumb-item"><NavLink href="@{$"/applications/{ApplicationId}"}">@Application.Name</NavLink></li>
        <li class="breadcrumb-item active" aria-current="page">@Phrase.Text</li>
    </ol>
</nav>

@if (Translation != null)
{
    <h3>Edit Translation: @Translation.Text (@Translation.LanguageName)</h3>

    <EditForm Model="Input" OnSubmit="HandleSubmit">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="mb-3">

            <label for="name" class="form-label">Name</label>
            <InputText id="name" class="form-control" @bind-Value="Input.Text"></InputText>
        </div>
    

        <button type="submit" class="btn btn-primary">Save</button>

    </EditForm>
}
