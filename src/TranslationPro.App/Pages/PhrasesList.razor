@page "/applications/{ApplicationId:guid}/phrases"
@inherits ApplicationDetailsBase

@if (Phrases == null)
{
    <p>Loading Phrases...</p>
}
else
{
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><NavLink href="@{$"/applications"}">Applications</NavLink></li>
            <li class="breadcrumb-item"><NavLink href="@{$"/applications/{ApplicationId}"}">@Application.Name</NavLink></li>
            <li class="breadcrumb-item active" aria-current="page">Phrases</li>
        </ol>
    </nav>
    <p>
        <NavLink class="btn btn-primary" href="@($"/applications/{ApplicationId}/phrases/create")">Create Phrase</NavLink>
    </p>

    <ul class="pagination mt-3">
        <li class="page-item @(Phrases.CurrentPage == 1 ? "disabled" : "")">
            <a class="page-link" href="/applications/{@Application.Id}/phrases/@(Phrases.CurrentPage - 1)">Previous</a>
        </li>
        @for (int i = 1; i <= Phrases.CurrentPage; i++)
        {
            <li class="page-item @(Phrases.CurrentPage == i ? "active" : "")">
                <a class="page-link" href="/employees/list/@i">@i</a>
            </li>
        }
        <li class="page-item @(Phrases.CurrentPage == Phrases.TotalPages ? "disabled" : "")">
            <a class="page-link" href="/employees/list/@(Phrases.CurrentPage + 1)">Next</a>
        </li>
    </ul>


    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Phrase</th>
            <th>Translations</th>
            <th>Pending Translations</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
            @foreach (var phrase in Phrases.Items)
            {
                <tr>
                    <td>@phrase.Id</td>
                    <td>
                        <NavLink href="@{$"/applications/{ApplicationId}/phrases/{@phrase.Id}"}">
                            @phrase.Text
                        </NavLink>
                    </td>
                    <td>@phrase.TranslationCount</td>
                    <td>@phrase.PendingTranslationCount</td>
                    <td class="btn-group-sm">
                        <a href="#"
                           class="btn btn-outline-primary">
                            Edit
                        </a>
                        <button class="btn btn-outline-danger">
                            Delete
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}