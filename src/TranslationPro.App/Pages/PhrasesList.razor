@page "/applications/{ApplicationId:guid}/phrases"
@inherits ApplicationDetailsBase

@if (Phrases == null)
{
    <p>Loading Phrases...</p>
}
else
{
     <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><NavLink href="@{$"/applications"}">Applications</NavLink></li>
            <li class="breadcrumb-item"><NavLink href="@{$"/applications/{ApplicationId}"}">@Application.Name</NavLink></li>
            <li class="breadcrumb-item active" aria-current="page">Phrases</li>
        </ol>
    </nav>
    <table class="table">
        <thead>
            <tr>
                <th>Phrase</th>
                <th>Translations</th>
                <th>Pending Translations</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var phrase in Phrases.Items)
            {
                <tr>
                    <td>
                        <NavLink href="@{
                    $"/applications/{ApplicationId}/phrases/{@phrase.Id}"
}">
                            @phrase.Text
                        </NavLink>
                    </td>
                    <td>@phrase.TranslationCount</td>
                    <td>@phrase.PendingTranslationCount</td>
                </tr>
            }
        </tbody>
    </table>
}

