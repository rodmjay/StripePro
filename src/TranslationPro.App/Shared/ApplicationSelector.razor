
<div class="">
    <div class="text-white">Choose Application:</div>
    @if (Applications != null)
    {
        if (Applications.Count > 0)
        {
            <select class="form-select" aria-label="Default select example" @onchange="DoStuff">

                @foreach (var application in Applications)
                {
                    if (application.Id == CurrentApplicationId)
                    {
                        <option value="@application.Id" selected>@application.Name</option>
                    }
                    else
                    {
                        <option value="@application.Id">@application.Name</option>
                    }

                }
            </select>
        }
        else
        {
            <button class="btn-primary">Create New Application</button>
        }
    }

</div>
