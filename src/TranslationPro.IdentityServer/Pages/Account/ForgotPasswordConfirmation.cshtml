@page
@model TranslationPro.IdentityServer.Pages.Account.ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Confirm Email";
}

<div class="row justify-content-center h-100">
    <left-column>
        <ss-main-content>
            <shadow-area>

                <partial name="Shared/_Logo"/>

                <h2 class="d-inline-flex ml-auto mr-auto">@ViewData["Title"]</h2>


                <p class="d-flex flex-column justify-content-center align-items-center pt-5">
                    An email with a confirmation link has been sent to your inbox. Go check it now and click the link to reset your password.
                </p>

                <div class="d-flex flex-column justify-content-center align-items-center pt-5 subtle">
                    <p>You may close this browser tab</p>
                </div>
            </shadow-area>
        </ss-main-content>
    </left-column>

</div>