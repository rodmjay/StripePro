@page
@model ResetPasswordConfirmationModel
@{
    ViewData["Title"] = "Reset password confirmation";

}

<div class="row justify-content-center h-100">
    <left-column>
        <ss-main-content>
            <shadow-area>
                <partial name="Shared/_Logo"/>
                <main-header name="Password Reset"></main-header>
                <p>
                    Your password has been changed successfully. <br/>
                    You can now go to your journey.

                    <div class="btn btn-primary btn-lg w-100 mt-3">
                        <a asp-page="./Login" class="text-white text-decoration-none">
                            Go to Journey
                        </a>
                    </div>

                </p>
            </shadow-area>
        </ss-main-content>
    </left-column>
    <partial name="Shared/_RightColumn"/>
</div>